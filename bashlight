#!/bin/sh

####################################################################################
# Bashlight 	: 0.1.2
# Copyright		: 2018, MIT
# Author			: Andr√© Lademann <vergissberlin@googlemail.com>
# Repository	: https://github.com/vergissberlin/bashlight
####################################################################################

# Your settings here
readonly PATH_BASHLIGHT="$HOME/bashlight"

# Check update
. ${PATH_BASHLIGHT}/update.sh

####################################################################################
# Include modules
####################################################################################

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/src/aliases, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.
[ -f "$PATH_BASHLIGHT/src/aliases" ] && { . "$PATH_BASHLIGHT/src/aliases"; }

# enable programmable completion features
if ! shopt -oq posix; then
	if [ -f /usr/share/bash-completion/bash_completion ]; then
		. /usr/share/bash-completion/bash_completion
	fi
fi

# Furthermore modules
[ -f "$PATH_BASHLIGHT/src/settings" ] && { . "$PATH_BASHLIGHT/src/settings"; }
[ -f "$PATH_BASHLIGHT/src/notify" ] && { . "$PATH_BASHLIGHT/src/notify"; }
[ -f "$PATH_BASHLIGHT/src/prompt" ] && { . "$PATH_BASHLIGHT/src/prompt"; }
[ -f "$PATH_BASHLIGHT/src/logout" ] && { . "$PATH_BASHLIGHT/src/logout"; }
